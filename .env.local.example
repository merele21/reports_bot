# ==================== Bot Configuration ====================
# Получить токен: https://t.me/BotFather
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Admin User IDs (comma-separated)
# Получить свой ID: https://t.me/userinfobot
ADMIN_IDS=ADMIN,IDS

# ==================== Database ====================
# SQLite для разработки (автоматически создастся)
DATABASE_URL=sqlite+aiosqlite:///./data/bot_data.db

# Раскомментируйте для PostgreSQL (если используете)
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/reportbot

# ==================== Timezone ====================
TZ=your/tz

# ==================== Bot Settings ====================
MIN_PHOTOS=1

# Stats schedule (cron format)
# 0=Monday, 6=Sunday
STATS_DAY=0
STATS_HOUR=5
STATS_MINUTE=0

# ==================== Deadline Settings ====================
# За сколько минут ДО дедлайна отправлять предупреждение
# Например: если дедлайн в 12:00, а DEADLINE_WARNING_MINUTES=5,
# то предупреждение придет в 11:55
DEADLINE_WARNING_MINUTES=5

# ==================== Local Settings ====================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=DEBUG

# Environment
ENVIRONMENT=local

# Enable debug features
DEBUG=true

# ==================== Monitoring ====================
PROMETHEUS_ENABLED=true

# Grafana
GRAFANA_USER=your_user
GRAFANA_PASSWORD=your_pass
GRAFANA_PORT=3000

# Prometheus
PROMETHEUS_PORT=9090

# Alertmanager
ALERTMANAGER_PORT=9093

# ==================== Email Testing (MailHog) ====================
# SMTP settings для тестирования email уведомлений
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=your_user
SMTP_PASSWORD=your_pass

# ==================== Redis (опционально) ====================
REDIS_URL=redis://redis:6379/0

# ==================== Tracing (Jaeger) - опционально ====================
JAEGER_ENABLED=false
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831

# ==================== Feature Flags ====================
# Включить/выключить функции для тестирования
FEATURE_PHOTO_VALIDATION=true
FEATURE_TEMPLATE_MATCHING=true
FEATURE_NOTIFICATIONS=true

# ==================== Testing ====================
# Использовать mock Telegram API для тестов
MOCK_TELEGRAM_API=false

# Test data
TEST_CHAT_ID=your_chat_id
TEST_USER_ID=user_id

# ==================== Slack Notifications (опционально) ====================
SLACK_WEBHOOK=

# ==================== API Rate Limiting ====================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60

# ==================== Debug Tools ====================
# Enable Python debugger on port 5678
DEBUGPY_ENABLED=true

# Enable profiling
PROFILING_ENABLED=false

# Enable SQL query logging
SQL_ECHO=false

# ==================== Hot Reload ====================
# Автоматическая перезагрузка при изменении кода
AUTO_RELOAD=true
RELOAD_DIRS=bot

# ==================== Ports (если нужно изменить) ====================
# BOT_METRICS_PORT=8000
# BOT_DEBUG_PORT=5678
# REDIS_PORT=6379